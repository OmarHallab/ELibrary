<p id="notice"><%= notice %></p>

<h1>Listing Article Reading Lists</h1>

<table>
  <thead>
    <tr>
      <th>Article</th>
      <th>Reading list</th>
      <th>State</th>
      <th>Active</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @article_reading_lists.each do |article_reading_list| %>
      <tr>
        <td><%= article_reading_list.article %></td>
        <td><%= article_reading_list.reading_list %></td>
        <td><%= article_reading_list.state %></td>
        <td><%= article_reading_list.active %></td>
        <td><%= link_to 'Show', article_reading_list %></td>
        <td><%= link_to 'Edit', edit_article_reading_list_path(article_reading_list) %></td>
        <td><%= link_to 'Destroy', article_reading_list, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

